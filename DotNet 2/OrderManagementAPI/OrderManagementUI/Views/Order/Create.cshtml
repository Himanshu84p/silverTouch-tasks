@model int

@{
    DateTime dateTime = DateTime.UtcNow; 
    string formattedDateTime = dateTime.ToString("yyyy-MM-ddTHH:mm:ss.fffZ");
    var defaultOrderDate = formattedDateTime; 
    var defaultStatus = "Pending"; 
    var defaultTotalAmount = "0";
}
<!DOCTYPE html>
<html>
<head>
    <title>Create Order</title>
   
</head>
<body>
    <div class="container">
        <h1>Create Order</h1>
        <div class="form-container">
            <form method="post" action="@Url.Action("Create", "Order",new {id = Model})">
                <input type="hidden" name="customerId" value="@Model" />
                
                <div class="form-group">
                    <label for="orderDate">Order Date</label>
                    <input type="text" class="form-control" id="orderDate" name="orderDate" value="@defaultOrderDate" readonly>
                </div>
                <div class="form-group">
                    <label for="status">Status</label>
                    <input type="text" class="form-control" id="status" name="status" value="@defaultStatus" readonly>
                </div>
                <div class="form-group">
                    <label for="totalAmount">Total Amount</label>
                    <input type="text" class="form-control" id="totalAmount" name="totalAmount" value="@defaultTotalAmount" readonly>
                </div>
                
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
        <a asp-action="Index" asp-controller="Order" asp-route-id="@Model" class="btn btn-secondary"><i class="fas fa-arrow-left"></i>Back to Customer</a>
    </div>
</body>
</html>
