@model RepsitoryPattern_DotNetCore.DataAccess.Employee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Details</h1>

    <div class="card shadow">
        <div class="card-body">
            <h4 class="card-title">Employee</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">First Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>
                <dt class="col-sm-2">Last Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>
                <dt class="col-sm-2">Job Title</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.JobTitle)</dd>
                <dt class="col-sm-2">Department</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Department)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-secondary ml-2" asp-action="Index">Back to List</a>
    </div>
</div>
