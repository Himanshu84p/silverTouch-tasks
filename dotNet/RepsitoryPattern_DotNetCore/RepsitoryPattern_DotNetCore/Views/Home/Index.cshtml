@model IEnumerable<RepsitoryPattern_DotNetCore.DataAccess.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .dataTables_wrapper {
        padding : 1rem;
    }

    .custom_table {
        margin : 1rem;
    }
</style>
<h1 class="text-center mb-4">Employee List</h1>

<div class="container bg-light rounded p-4">
    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-outline-primary rounded-pill shadow-sm" asp-action="Create">Create New</a>
    </div>
    <div class="table-responsive rounded shadow-lg">
        <table class="table table-bordered table-hover rounded custom_table" id="employeeTable">
            <thead class="thead-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Job Title</th>
                    <th>Department</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.JobTitle)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department)</td>
                        <td>
                            <a class="btn btn-outline-info btn-sm rounded-pill shadow-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-outline-secondary btn-sm rounded-pill shadow-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-outline-danger btn-sm rounded-pill shadow-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#employeeTable').DataTable({
                "pagingType": "full_numbers",
                "language": {
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "&#8594;",
                        "previous": "&#8592;"
                    },
                    "search": "Search:",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries"
                },
                "dom": "<'row'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>"
            });
        });
    </script>
}
