@model IEnumerable<QAManagement.Models.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create", new { id = ViewBag.Qid }, new { @class = "btn btn-primary" })
    </p>
    <div class="table-responsive">
        <table class="table table-striped shadow">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.QuestionText)</th>
                    <th>@Html.DisplayNameFor(model => model.Option1)</th>
                    <th>@Html.DisplayNameFor(model => model.Option2)</th>
                    <th>@Html.DisplayNameFor(model => model.Option3)</th>
                    <th>@Html.DisplayNameFor(model => model.Option4)</th>
                    <th>@Html.DisplayNameFor(model => model.CorrectAnswer)</th>
                    <th>@Html.DisplayNameFor(model => model.QuestionPaper.Title)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.QuestionText)</td>
                        <td>@Html.DisplayFor(modelItem => item.Option1)</td>
                        <td>@Html.DisplayFor(modelItem => item.Option2)</td>
                        <td>@Html.DisplayFor(modelItem => item.Option3)</td>
                        <td>@Html.DisplayFor(modelItem => item.Option4)</td>
                        <td>@Html.DisplayFor(modelItem => item.CorrectAnswer)</td>
                        <td>@Html.DisplayFor(modelItem => item.QuestionPaper.Title)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.QuestionID }, new { @class = "btn btn-sm btn-primary" })
                            @Html.ActionLink("Details", "Details", new { id = item.QuestionID }, new { @class = "btn btn-sm btn-secondary" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.QuestionID }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
