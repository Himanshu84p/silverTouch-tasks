@model QAManagement.Models.QuestionPaper

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">Question Paper Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">Title:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-4 font-weight-bold">Description:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-4 font-weight-bold">Creation Date:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreationDate)</dd>

                        <dt class="col-sm-4 font-weight-bold">Status:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                        <dt class="col-sm-4 font-weight-bold">Created By:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Username)</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <div class="btn-group" role="group">
                        
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
