@model QAManagement.Models.QuestionPaper

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>


<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <h3>Are you sure you want to delete this?</h3>
                    <h4 class="card-title">Question Paper Details</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt class="font-weight-bold">Title:</dt>
                        <dd>@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="font-weight-bold">Description:</dt>
                        <dd>@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="font-weight-bold">Creation Date:</dt>
                        <dd>@Html.DisplayFor(model => model.CreationDate)</dd>

                        <dt class="font-weight-bold">Status:</dt>
                        <dd>@Html.DisplayFor(model => model.Status)</dd>

                        <dt class="font-weight-bold">Created By:</dt>
                        <dd>@Html.DisplayFor(model => model.User.Username)</dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <button type="submit" class="btn btn-danger">Delete</button> |
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
