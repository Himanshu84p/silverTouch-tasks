@model QAManagement.Models.User

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <h2 class="mb-4">Details</h2>

    <div class="card shadow">
        <div class="card-body">
            <h4 class="card-title">User</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>

                <dt class="col-sm-3">Password</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PasswordHash)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Role)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Edit", "Edit", new { id = Model.UserID }, new { @class = "btn btn-primary mr-2" })
        @Html.ActionLink("Go to Users", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
