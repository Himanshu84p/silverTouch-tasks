<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Question Villa</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+z5vIOq97uFGbh/ZmJXHQFZP+i6v+d5Q8/D4WJy" crossorigin="anonymous">
    <style>
        body {
            padding-top: 4.5rem;
        }

        footer {
            margin-top: 2rem;
            text-align: center;
            color: #666;
        }

        .body-content {
            min-height: 80vh;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <div class="container">
            @Html.ActionLink("Question Villa", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-md-0">
                    @if (Session["UserId"] != null)
                    {
                        if (Convert.ToString(Session["UserRole"]) == "Teacher")
                        {

                            <li class="nav-item">
                                @Html.ActionLink("Home", "Index", "Teacher", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                        else if (Convert.ToString(Session["UserRole"]) == "Admin")
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Home", "Index", "Admin", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                        else if (Convert.ToString(Session["UserRole"]) == "Student")
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Home", "Index", "Student", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }

                        <li class="nav-item">
                            <span class="nav-link">@Session["Username"]</span>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Users", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }

                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Users", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="bg-dark text-light py-3 mb-4">
        <div class="container">
            <p class="m-0">&copy; @DateTime.Now.Year - Question Villa</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
